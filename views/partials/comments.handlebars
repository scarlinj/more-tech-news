<div class="comments">
    {{!-- partials can use "this", instead of "post.comments"  --}}
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>