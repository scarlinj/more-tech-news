<article class="comment">
    {{!-- partials can use "this", instead of "post.comments"  --}}
  {{#each this}}
  <div class="title">
    <a href="{{comment_text}}" target="_blank">{{title}}</a>
    <span>({{format_url post_url}})</span>
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
  </section>
  {{/each}}
</article>

